<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--SpringMVC的配置文件，包含网站的跳转逻辑的控制和配置-->
    <context:component-scan base-package="com.dimple" use-default-filters="false">
        <!--设置只扫描被controller注解了的类，定义了一个过滤器，然后还需要禁用掉默认的filter-->
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>

    <!--配置视图解析器，方便页面返回信息-->
    <bean  class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--两个标准配置-->
    <!--将springmvc不能处理的请求交给Tomcat-->
    <mvc:default-servlet-handler/>
    <!--支持springmvc的一些高级功能，映射动态请求-->
    <!--疑问：有什么作用？-->
    <!--注解驱动的作用是为了代替配置的处理器映射器和处理器适配器-->
    <!--annotation-driven会自动加载RequestMappingHandledAdapter和RequestMappingHandledMapping-->
    <mvc:annotation-driven/>
</beans>